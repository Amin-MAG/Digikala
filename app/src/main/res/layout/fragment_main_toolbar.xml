<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/digikala_red">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="103dp"
            android:layout_height="39dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/toolbar_fragment__menu_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toolbar_fragment__search_btn"
            android:layout_width="52dp"
            android:layout_height="60dp"
            app:backgroundTint="@color/nothing"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_search"
            app:iconSize="22dp"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintLeft_toRightOf="@+id/toolbar_fragment__cart_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toolbar_fragment__cart_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="52dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            app:backgroundTint="@color/nothing"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_shopping_cart"
            app:iconSize="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toolbar_fragment__menu_btn"
            android:layout_width="52dp"
            android:layout_height="60dp"
            app:backgroundTint="@color/nothing"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_navigation"
            style="?android:attr/borderlessButtonStyle"
            app:iconSize="22dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.appbar.AppBarLayout>