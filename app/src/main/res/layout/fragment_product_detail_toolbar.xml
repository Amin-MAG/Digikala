<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/digikala_red">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/product_detail_toolbar_fragment__cart_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="52dp"
            android:layout_height="60dp"
            android:insetTop="0dp"
            android:insetBottom="6dp"
            app:backgroundTint="#007B2CD6"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_shopping_cart"
            app:iconPadding="0dp"
            app:iconSize="20dp"
            app:layout_constraintLeft_toRightOf="@+id/product_detail_toolbar_fragment__menu_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/product_detail_toolbar_fragment__menu_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="52dp"
            android:layout_height="60dp"
            android:insetTop="0dp"
            android:insetBottom="6dp"
            app:backgroundTint="#007B2CD6"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_menu"
            app:iconPadding="0dp"
            app:iconSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toolbar_fragment__back_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="52dp"
            android:layout_height="60dp"
            android:insetTop="0dp"
            android:insetBottom="8dp"
            app:backgroundTint="#007B2CD6"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_back"
            app:iconPadding="0dp"
            app:iconSize="22dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.appbar.AppBarLayout>